<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_head') %>
  <body>
  <%- include('partials/_header'); %>
  <main class="unique-listing-info">
    <article class="unique-listing-details">
      <div class="unique-primary-info">
      <img src="<%= `${product.img_url}` %>">
      <div>
        <span><%= product.title %></span>
        <span class="price">$<%= product.price %></span>
      </div>
      <p><%= product.description %></p>
    </div>
      <div class="unique-listing-buttons">
        <button id="markSold" value="<%= `${product.id}` %>">Mark As Sold</button>
        <button id="addFavourite" value="<%= `${product.id}` %>">Add As Favourite</button>
        <button>Contact Seller</button>
      </div>
      <p class="user-msg"></p>
    </article>
  </main>
</body>

</html>
