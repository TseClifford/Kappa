<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_head') %>
  <body>
  <%- include('partials/_header'); %>
  <main class="unique-listing-info">
    <article class="unique-listing-details">
      <div class="unique-primary-info">
      <img src="<%= `${product.img_url}` %>">
      <div>
        <span><%= product.title %></span>
        <span class="price">$<%= product.price %></span>
      </div>
      <p><%= product.description %></p>
    </div>
      <div class="unique-listing-buttons">
        <% if (typeof userObj !=='undefined' && userObj.admin === true) { %>
          <button id="addFavourite" value="<%= `${product.id}` %>" class="<%= isFavourite ? 'disabled-btn' : '' %>"><%= isFavourite ? "Favourited" : "Add As Favourite" %></button>
          <button id="markSold" value="<%= `${product.id}` %>" class="<%= product.sold ? 'disabled-btn' : '' %>"><%= product.sold ? "Sold" : "Mark As Sold" %></button>
          <button id="deleteListing" value="<%= `${product.id}` %>">Delete Listing</button>
          <% } else if (typeof userObj !=='undefined') { %>
          <button id="addFavourite" value="<%= `${product.id}` %>" class="<%= isFavourite ? 'disabled-btn' : '' %>"><%= isFavourite ? "Favourited" : "Add As Favourite" %></button>
          <button id="msgBreeder">Contact Breeder</button>
          <% } else { %>
          <button id="msgBreeder">Contact Breeder</button>
          <% }%>
      </div>
      <p class="user-msg"></p>
    </article>
    <form id="msgForm" action="/message" method="post">
      <ul>
       <li>
         <label for="name" >Name:</label>
         <input type="text" id="name" name="user_name" required>
       </li>
       <li>
         <label for="mail">E-mail:</label>
         <input type="email" id="mail" name="user_email" required>
       </li>
       <li>
         <label for="msg">Message:</label>
         <textarea id="msg" name="user_message" required></textarea>
       </li>
       <li>
         <button>Submit</button>
        </li>
      </ul>
     </form>
  </main>
</body>

</html>
